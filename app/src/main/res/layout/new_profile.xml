<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="20dp"
		android:id="@+id/theLayout">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:layout_marginBottom="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="'title'"
				android:typeface="monospace"
				android:textSize="25sp"
				android:textColor="#0FD900"
				android:textStyle="bold"
				android:id="@+id/theTitle"/>

		</LinearLayout>

		<RadioGroup
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/profileMode"
			android:layout_marginBottom="10dp">

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/str_new"
				android:textSize="20sp"
				android:typeface="serif"
				android:padding="5dp"
				android:id="@+id/radio_new"/>

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/str_import"
				android:textSize="20sp"
				android:typeface="serif"
				android:padding="5dp"
				android:id="@+id/radio_import"/>

		</RadioGroup>

		<Spinner
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/theSpinner"
			android:typeface="monospace"/>

		<EditText
			android:layout_width="wrap_content"
			android:inputType="textPersonName"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/theEdit"
			android:hint="Profile name"
			android:typeface="monospace"/>

	</LinearLayout>

</LinearLayout>

